    <delete id="deleteById">
        DELETE FROM CIS_BXSQDZD WHERE
        YLJGD = #{yljgd}  AND 
        SQDH = #{sqdh} 
    </delete>
    
    <delete id="removeByEntity">
        DELETE FROM CIS_BXSQDZD <include refid="where"/>  
