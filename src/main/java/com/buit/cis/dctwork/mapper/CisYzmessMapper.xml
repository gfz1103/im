    <insert id="insert">
        INSERT INTO CIS_YZMESS (
            JLXH ,
            ZYH ,
            FSSJ ,
            ZT ,
            JGID ,
            MESSID ,
            FSRDM ,
            CLRDM 
        ) VALUES (
            #{jlxh} ,
            #{zyh} ,
            #{fssj} ,
            #{zt} ,
            #{jgid} ,
            #{messid} ,
            #{fsrdm} ,
            #{clrdm} 
        )
    </insert>
    
    <update id="update" ><!--  
