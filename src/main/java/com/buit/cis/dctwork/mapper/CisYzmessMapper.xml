	<!-- 更新消息状态 -->
    <update id="updateZtByJlxh" >
        update cis_yzmess set zt = #{newzt}, clrdm = #{clrdm} where jlxh = #{jlxh} 
        and zt = #{oldzt}    
    </update>
    
    <!-- 查询是否存在最新发送时间已完成的消息 -->
    <select id="queryLatestTime" resultType="CisYzmess">
        select <include refid="columns" /> 
        from cis_yzmess where  fssj = (
			select max(fssj) from cis_yzmess where zyh = #{zyh}
		) and  zyh = #{zyh} 
    </select>
    
