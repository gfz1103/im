<!--                </if> -->
        </where>
    </sql>
        
    <select id="findByEntityCount" resultType="long">
        SELECT count(*) FROM PUB_CSRZ 
        <include refid="where"/>    
    </select>
    
    <select id="findByEntity" resultType="PubCsrz">
        SELECT <include refid="columns" />
        FROM PUB_CSRZ 
        <include refid="where"/>
        
        <if test="@sqlt.Ognl@orderIsNotEmpty(sortColumns)">
            ORDER BY ${sortColumns}
        </if>
    </select>
