<mapper namespace="com.buit.cis.dctwork.dao.PubCsrzDao">

    <!-- 用于select查询公用抽取的列 -->
    <sql id="columns">
        RZXH as rzxh,JGID as jgid,RZSJ as rzsj,RZLX as rzlx,RZXX as rzxx
    </sql>

    <insert id="insert">
        INSERT INTO PUB_CSRZ (
            RZXH ,
            JGID ,
            RZSJ ,
            RZLX ,
            RZXX 
        ) VALUES (
            #{rzxh} ,
            #{jgid} ,
            #{rzsj} ,
            #{rzlx} ,
            #{rzxx} 
        )
    </insert>
    
    <update id="update" ><!--  
        UPDATE PUB_CSRZ SET
            JGID = #{jgid} ,
            RZSJ = #{rzsj} ,
            RZLX = #{rzlx} ,
            RZXX = #{rzxx} 
        WHERE 
            RZXH = #{rzxh} 
            -->            
    </update>

    <delete id="deleteById">
        DELETE FROM PUB_CSRZ WHERE
        RZXH = #{rzxh} 
    </delete>
    
    <delete id="removeByEntity">
        DELETE FROM PUB_CSRZ <include refid="where"/>  
    </delete>
    
    <select id="getById" resultType="PubCsrz">
        SELECT <include refid="columns" />
            FROM PUB_CSRZ 
            WHERE 
        RZXH = #{rzxh} 
    </select>
    
