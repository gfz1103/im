    <!-- 用于select查询公用抽取的列 -->
    <sql id="columns">
        JLXH as jlxh,JGID as jgid,ZYH as zyh,CYSJ as cysj,CYFS as cyfs,CZLX as czlx,CZR as czr,CZRQ as czrq
