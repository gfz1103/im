    <insert id="insert">
        INSERT INTO IM_CYJL (
            JLXH ,
            JGID ,
            ZYH ,
            CYSJ ,
            CYFS ,
            CZLX ,
            CZR ,
            CZRQ 
        ) VALUES (
            #{jlxh} ,
            #{jgid} ,
            #{zyh} ,
            #{cysj} ,
            #{cyfs} ,
            #{czlx} ,
            #{czr} ,
            #{czrq} 
        )
    </insert>
    
    <update id="update" ><!--  
        UPDATE IM_CYJL SET
            JGID = #{jgid} ,
            ZYH = #{zyh} ,
            CYSJ = #{cysj} ,
            CYFS = #{cyfs} ,
            CZLX = #{czlx} ,
            CZR = #{czr} ,
            CZRQ = #{czrq} 
        WHERE 
            JLXH = #{jlxh} 
            -->            
    </update>

    <delete id="deleteById">
        DELETE FROM IM_CYJL WHERE
        JLXH = #{jlxh} 
    </delete>
    
    <delete id="removeByEntity">
        DELETE FROM IM_CYJL <include refid="where"/>  
    </delete>
    
