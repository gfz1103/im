<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--  -->
<mapper namespace="com.buit.cis.ims.dao.ImTwdnrDao">

    <!-- 用于select查询公用抽取的列 -->
    <sql id="columns">
        ZYH as zyh,ZYHM as zyhm,CZNR as cznr,CZSJ as czsj,ID as id,BRCH as brch,BRXM as brxm,ZFBZ as zfbz,CZLX as czlx,CZR as czr,JLSJ as jlsj
    </sql>

    <insert id="insert">
        INSERT INTO IM_TWDNR (
            ZYH ,
            ZYHM ,
            CZNR ,
            CZSJ ,
            ID ,
            BRCH ,
            BRXM ,
            ZFBZ ,
            CZLX ,
            CZR ,
            JLSJ 
        ) VALUES (
            #{zyh} ,
            #{zyhm} ,
            #{cznr} ,
            #{czsj} ,
            #{id} ,
            #{brch} ,
            #{brxm} ,
            #{zfbz} ,
            #{czlx} , 
            #{czr} , 
            #{jlsj}  
        )
    </insert>
    
    <update id="update" >
        UPDATE IM_TWDNR SET
            ZYH = #{zyh} ,
            ZYHM = #{zyhm} ,
            CZNR = #{cznr} ,
            CZSJ = #{czsj} ,
            BRCH = #{brch} ,
            BRXM = #{brxm} ,
            ZFBZ = #{zfbz} , 
            CZLX = #{czlx} ,
            CZR = #{czr} ,
            JLSJ = #{jlsj} 
        WHERE 
            ID = #{id}            
    </update>

    <update id="invalid" >
        UPDATE IM_TWDNR SET
            ZFBZ = #{zfbz}
        WHERE
            ID = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM IM_TWDNR WHERE
        ID = #{id} 
    </delete>
    
    <delete id="removeByEntity">
        DELETE FROM IM_TWDNR <include refid="where"/>  
    </delete>
    
    <select id="getById" resultType="ImTwdnr">
        SELECT <include refid="columns" />
            FROM IM_TWDNR 
            WHERE 
        ID = #{id} 
    </select>
    
    <sql id="where">
        <where>                          
                <if test="@sqlt.Ognl@isNotEmpty(zyh)">
                     AND ZYH = #{zyh}
                </if>
                <if test="@sqlt.Ognl@isNotEmpty(zyhm)">
                     AND ZYHM = #{zyhm}
                </if>
                <if test="@sqlt.Ognl@isNotEmpty(cznr)">
                     AND CZNR = #{cznr}
                </if>
                <if test="@sqlt.Ognl@isNotEmpty(czsj)">
                     AND CZSJ = #{czsj}
                </if>
                <if test="@sqlt.Ognl@isNotEmpty(id)">
                     AND ID = #{id}
                </if>
                <if test="@sqlt.Ognl@isNotEmpty(brch)">
                     AND BRCH = #{brch}
                </if>
                <if test="@sqlt.Ognl@isNotEmpty(brxm)">
                     AND BRXM = #{brxm}
                </if>
                <if test="@sqlt.Ognl@isNotEmpty(zfbz)">
                     AND ZFBZ = #{zfbz}
                </if>
                <if test="@sqlt.Ognl@isNotEmpty(czlx)">
                     AND CZLX = #{czlx}
                </if>
                <if test="@sqlt.Ognl@isNotEmpty(czr)">
                     AND CZR = #{czr}
                </if>
                <if test="@sqlt.Ognl@isNotEmpty(jlsj)">
                     AND JLSJ = #{jlsj}
                </if>
        </where>
    </sql>
        
    <select id="findByEntityCount" resultType="long">
        SELECT count(*) FROM IM_TWDNR 
        <include refid="where"/>    
    </select>
    
    <select id="findByEntity" resultType="ImTwdnr">
        SELECT <include refid="columns" />
        FROM IM_TWDNR 
        <include refid="where"/>
        
        <if test="@sqlt.Ognl@orderIsNotEmpty(sortColumns)">
            ORDER BY ${sortColumns}
        </if>
    </select>
    <!--     业务sql      -->
</mapper>

