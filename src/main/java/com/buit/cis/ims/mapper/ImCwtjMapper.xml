    <insert id="insert">
        INSERT INTO IM_CWTJ (
            JLXH ,
            JGID ,
            CZRQ ,
            CZLX ,
            ZYH ,
            BRKS ,
            YSYS ,
            XSYS ,
            BQPB 
        ) VALUES (
            #{jlxh} ,
            #{jgid} ,
            #{czrq} ,
            #{czlx} ,
            #{zyh} ,
            #{brks} ,
            #{ysys} ,
            #{xsys} ,
            #{bqpb} 
        )
