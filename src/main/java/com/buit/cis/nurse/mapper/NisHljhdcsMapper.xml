<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 护理执行单子表 -->
<mapper namespace="com.buit.cis.nurse.dao.NisHljhdcsDao">

    <!-- 用于select查询公用抽取的列 -->
    <sql id="columns">
        JLXH as jlxh,ZXJLXH as zxjlxh,HLCS as hlcs
    </sql>

    <insert id="insert">
        INSERT INTO NIS_HLJHDCS (
            JLXH ,
            ZXJLXH ,
            HLCS 
        ) VALUES (
            #{jlxh} ,
            #{zxjlxh} ,
            #{hlcs} 
        )
    </insert>
    
    <update id="update" ><!--  
        UPDATE NIS_HLJHDCS SET
            ZXJLXH = #{zxjlxh} ,
            HLCS = #{hlcs} 
        WHERE 
            JLXH = #{jlxh} 
            -->            
    </update>

    <delete id="deleteById">
        DELETE FROM NIS_HLJHDCS WHERE
        JLXH = #{jlxh} 
    </delete>
    
    <delete id="removeByEntity">
        DELETE FROM NIS_HLJHDCS <include refid="where"/>  
    </delete>
    
    <select id="getById" resultType="NisHljhdcs">
        SELECT <include refid="columns" />
            FROM NIS_HLJHDCS 
            WHERE 
        JLXH = #{jlxh} 
    </select>
    
    <sql id="where">
        <where>                          
<!--                <if test="@sqlt.Ognl@isNotEmpty(jlxh)"> -->
<!--                     AND JLXH = #{jlxh} -->
<!--                </if> -->
                <if test="@sqlt.Ognl@isNotEmpty(zxjlxh)"> 
                     AND ZXJLXH = #{zxjlxh} 
                </if>
<!--                <if test="@sqlt.Ognl@isNotEmpty(hlcs)"> -->
<!--                     AND HLCS = #{hlcs} -->
<!--                </if> -->
        </where>
    </sql>
        
    <select id="findByEntityCount" resultType="long">
        SELECT count(*) FROM NIS_HLJHDCS 
        <include refid="where"/>    
    </select>
    
    <select id="findByEntity" resultType="NisHljhdcs">
        SELECT <include refid="columns" />
        FROM NIS_HLJHDCS 
        <include refid="where"/>
        
        <if test="@sqlt.Ognl@orderIsNotEmpty(sortColumns)">
            ORDER BY ${sortColumns}
        </if>
    </select>
    <!--     业务sql      -->
    
    <delete id="deleteByZxjlxh">
        delete from nis_hljhdcs where zxjlxh = #{zxjlxh} 
    </delete>
</mapper>

