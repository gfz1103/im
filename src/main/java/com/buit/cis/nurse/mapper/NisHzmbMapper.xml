<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 患者护理记录模板表 -->
<mapper namespace="com.buit.cis.nurse.dao.NisHzmbDao">

    <!-- 用于select查询公用抽取的列 -->
    <sql id="columns">
        JLXH as jlxh,ZYH as zyh,MBLX as mblx,MBMC as mbmc,JGID as jgid
    </sql>

    <insert id="insert">
        INSERT INTO NIS_HZMB (
            JLXH ,
            ZYH ,
            MBLX ,
            MBMC ,
            JGID 
        ) VALUES (
            #{jlxh} ,
            #{zyh} ,
            #{mblx} ,
            #{mbmc} ,
            #{jgid} 
        )
    </insert>
    
    <update id="update" ><!--  
        UPDATE NIS_HZMB SET
            ZYH = #{zyh} ,
            MBLX = #{mblx} ,
            MBMC = #{mbmc} ,
            JGID = #{jgid} 
        WHERE 
            JLXH = #{jlxh} 
            -->            
    </update>

    <delete id="deleteById">
        DELETE FROM NIS_HZMB WHERE
        JLXH = #{jlxh} 
    </delete>
    
    <delete id="removeByEntity">
        DELETE FROM NIS_HZMB <include refid="where"/>  
    </delete>
    
    <select id="getById" resultType="NisHzmb">
        SELECT <include refid="columns" />
            FROM NIS_HZMB 
            WHERE 
        JLXH = #{jlxh} 
    </select>
    
    <sql id="where">
        <where>                          
<!--                <if test="@sqlt.Ognl@isNotEmpty(jlxh)"> -->
<!--                     AND JLXH = #{jlxh} -->
<!--                </if> -->
                <if test="@sqlt.Ognl@isNotEmpty(zyh)"> 
                     AND ZYH = #{zyh} 
                </if>
               <if test="@sqlt.Ognl@isNotEmpty(mblx)">
                    AND MBLX = #{mblx}
               </if>
<!--                <if test="@sqlt.Ognl@isNotEmpty(mbmc)"> -->
<!--                     AND MBMC = #{mbmc} -->
<!--                </if> -->
                <if test="@sqlt.Ognl@isNotEmpty(jgid)"> 
                     AND JGID = #{jgid}
                </if> 
        </where>
    </sql>
        
    <select id="findByEntityCount" resultType="long">
        SELECT count(*) FROM NIS_HZMB 
        <include refid="where"/>    
    </select>
    
    <select id="findByEntity" resultType="NisHzmb">
        SELECT <include refid="columns" />
        FROM NIS_HZMB 
        <include refid="where"/>
        
        <if test="@sqlt.Ognl@orderIsNotEmpty(sortColumns)">
            ORDER BY ${sortColumns}
        </if>
    </select>
    <!--     业务sql      -->
</mapper>

