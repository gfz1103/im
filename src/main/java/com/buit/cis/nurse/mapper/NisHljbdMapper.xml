<!--                </if> -->
        </where>
    </sql>
        
    <select id="findByEntityCount" resultType="long">
        SELECT count(*) FROM NIS_HLJBD 
        <include refid="where"/>    
    </select>
    
    <select id="findByEntity" resultType="NisHljbd">
        SELECT <include refid="columns" />
        FROM NIS_HLJBD 
        <include refid="where"/>
        
        <if test="@sqlt.Ognl@orderIsNotEmpty(sortColumns)">
            ORDER BY ${sortColumns}
        </if>
    </select>
    <!--     业务sql      -->
    
    <!-- 分页查询护理交班单 -->
    <select id="queryPageHljbd" resultType="NisHljbd">
        select <include refid="columns" />
        	from nis_hljbd 
		where jgid = #{jgid}
		and bqdm = #{bqdm}
        <if test="@sqlt.Ognl@isNotEmpty(kssj)">
            and date_format(jbsj,'%Y-%m-%d') &gt;= #{kssj}
        </if>
        <if test="@sqlt.Ognl@isNotEmpty(jssj)">
            and date_format(jbsj,'%Y-%m-%d') &lt;= #{jssj}
        </if>
        <if test="@sqlt.Ognl@isNotEmpty(bclx)">
            and bclx = #{bclx}
        </if>
        <if test="@sqlt.Ognl@isNotEmpty(hlzh)">
            and hlzh = #{hlzh}
        </if>
    </select>
    
    <!-- 查询是否存在同时间班次护理组交班单 -->
    <select id="queryIsExistSameTimeInfo" resultType="long">
        select count(1) from nis_hljbd 
        where jgid = #{jgid}
        and hlzh = #{hlzh}
        and date_format(jbsj,'%Y-%m-%d') = date_format(#{jbsj},'%Y-%m-%d')
        and bclx = #{bclx}
    </select>
</mapper>

