<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 护理交班单主表 -->
<mapper namespace="com.buit.cis.nurse.dao.NisHljbdDao">

    <!-- 用于select查询公用抽取的列 -->
    <sql id="columns">
        JLXH as jlxh,JBSJ as jbsj,BCLX as bclx,HLZH as hlzh,BQDM as bqdm,JGID as jgid
    </sql>

    <insert id="insert">
        INSERT INTO NIS_HLJBD (
            JLXH ,
            JBSJ ,
            BCLX ,
            HLZH ,
            BQDM ,
            JGID 
        ) VALUES (
            #{jlxh} ,
            #{jbsj} ,
            #{bclx} ,
            #{hlzh} ,
            #{bqdm} ,
            #{jgid} 
        )
    </insert>
    
    <update id="update" >
        UPDATE NIS_HLJBD SET
            JBSJ = #{jbsj} ,
            BCLX = #{bclx} ,
            HLZH = #{hlzh} ,
            BQDM = #{bqdm} ,
            JGID = #{jgid} 
        WHERE 
            JLXH = #{jlxh}           
    </update>

    <delete id="deleteById">
        DELETE FROM NIS_HLJBD WHERE
        JLXH = #{jlxh} 
    </delete>
    
    <delete id="removeByEntity">
        DELETE FROM NIS_HLJBD <include refid="where"/>  
    </delete>
    
    <select id="getById" resultType="NisHljbd">
        SELECT <include refid="columns" />
            FROM NIS_HLJBD 
            WHERE 
        JLXH = #{jlxh} 
    </select>
    
