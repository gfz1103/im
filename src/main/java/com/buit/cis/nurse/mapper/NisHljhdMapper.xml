<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 护理计划单主表 -->
<mapper namespace="com.buit.cis.nurse.dao.NisHljhdDao">

    <!-- 用于select查询公用抽取的列 -->
    <sql id="columns">
        JLXH as jlxh,ZYH as zyh,RQ as rq,HLWT as hlwt,HLMB as hlmb,JGID as jgid,XGPJ as xgpj,HSQM as hsqm
    </sql>

    <insert id="insert">
        INSERT INTO NIS_HLJHD (
            JLXH ,
            ZYH ,
            RQ ,
            HLWT ,
            HLMB ,
            JGID ,
            XGPJ ,
            HSQM 
        ) VALUES (
            #{jlxh} ,
            #{zyh} ,
            #{rq} ,
            #{hlwt} ,
            #{hlmb} ,
            #{jgid} ,
            #{xgpj} ,
            #{hsqm} 
        )
    </insert>
    
    <update id="update" >
        UPDATE NIS_HLJHD SET
            ZYH = #{zyh} ,
            RQ = #{rq} ,
            HLWT = #{hlwt} ,
            HLMB = #{hlmb} ,
            JGID = #{jgid} ,
            XGPJ = #{xgpj} ,
            HSQM = #{hsqm} 
        WHERE 
            JLXH = #{jlxh}          
    </update>

    <delete id="deleteById">
        DELETE FROM NIS_HLJHD WHERE
        JLXH = #{jlxh} 
    </delete>
    
    <delete id="removeByEntity">
        DELETE FROM NIS_HLJHD <include refid="where"/>  
    </delete>
    
    <select id="getById" resultType="NisHljhd">
        SELECT <include refid="columns" />
            FROM NIS_HLJHD 
            WHERE 
        JLXH = #{jlxh} 
    </select>
    
