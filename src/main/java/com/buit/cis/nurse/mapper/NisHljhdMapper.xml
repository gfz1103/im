    <select id="findByEntityCount" resultType="long">
        SELECT count(*) FROM NIS_HLJHD 
        <include refid="where"/>    
    </select>
    
    <select id="findByEntity" resultType="NisHljhd">
        SELECT <include refid="columns" />
        FROM NIS_HLJHD 
        <include refid="where"/>
        
        <if test="@sqlt.Ognl@orderIsNotEmpty(sortColumns)">
            ORDER BY ${sortColumns}
        </if>
    </select>
    <!--     业务sql      -->
    
    <!-- 根据日期查询护理计划单 -->
    <select id="queryHljhdByDate" resultType="com.buit.cis.nurse.response.NisHljhdResp">
       SELECT JLXH as jlxh,ZYH as zyh,date_format(RQ, '%Y-%m-%d %H:%i') as rq,HLWT as hlwt,HLMB as hlmb,JGID as jgid,XGPJ as xgpj,HSQM as hsqm
        FROM NIS_HLJHD 
        WHERE ZYH = #{zyh}
		<if test="@sqlt.Ognl@isNotEmpty(queryDate)">
			  and DATE_FORMAT(RQ, '%m-%d') = #{queryDate}
        </if> 
        and JGID = #{jgid}
        order by RQ
    </select>
    
    <!-- 查询计划单时间树 -->
    <select id="queryHljhdDateTree" resultType="java.lang.String">
		 select date_format(rq, '%m-%d') as rq
		 from nis_hljhd 
		 where zyh = #{zyh}
		 and jgid = #{jgid}
		 group by date_format(rq, '%m-%d')
         order by rq
    </select>
